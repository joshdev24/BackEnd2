<h1>Formulario de producto</h1>
<form action="/products/new" method="POST">
    <div>
        <label for="nombre">Nombre:</label>
        <input id="nombre" name="nombre" placeholder="Escriba el nombre del producto..." />
        {{#if this.data.errors.nombre}}
        <span>{{this.data.errors.nombre}}</span>
        {{/if}}
    </div>
    <div>
        <label for="precio">Precio:</label>
        <input id="precio" name="precio" placeholder="Escriba el precio del producto..." />
        {{#if this.data.errors.precio}}
        <span>{{this.data.errors.precio}}</span>
        {{/if}}
    </div>
    <div>
        <label for="stock">Stock:</label>
        <input id="stock" name="stock" placeholder="Escriba el stock del producto..." />
        {{#if this.data.errors.stock}}
        <span>{{this.data.errors.stock}}</span>
        {{/if}}
    </div>
    <div>
        <label for="descripcion">Descripcion:</label>
        <textarea id="descripcion" name="descripcion" placeholder="Escriba la descripcion del producto...">
            {{#if this.data.errors.descripcion}}
            <span>{{this.data.errors.descripcion}}</span>
        {{/if}}
        </textarea>
    </div>
    <input type="submit">
</form>